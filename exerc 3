 public $desc;
 public function Produto($nom,$pre,$quant){
  $this->nome = $nom;
  $this->preco= $pre;
  $this-> quantidade = $quant;
  $this->pagar = $this->preco * $this->quantidade;
      if($this->quantidade >=11 and $this->quantidade <=20){
